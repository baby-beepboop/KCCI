// 비트 연산 (bit shift 연산자, atoi 활용)
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

void printBin(unsigned char n) {
	for (int i = 7; i >= 0; i--) {
		printf("%d", (n >> i) & 1);
	}
	printf("\n");
}

int main() {
	char a[10], b[10];
	int a_int, b_int;
	unsigned char and, or, xor, rightShift, leftShift;
	int not;

	while (1) {
		printf("Enter two integers that can be bitwise manipulated (Exit: 999): ");
		scanf("%s %s", &a, &b);

		if (a == "999" || b == "999") break;

		printf("---------------------------------------------------------------\n");

		a_int = atoi(a);
		b_int = atoi(b);

		and = a_int & b_int;
		or = a_int | b_int;
		xor = a_int ^ b_int;
		not = ~a_int;
		rightShift = a_int >> b_int;
		leftShift = a_int << b_int;

		printf("%3d  & %3d = %3d = 0b", a_int, b_int, and); printBin(and);
		printf("%3d  | %3d = %3d = 0b", a_int, b_int, or); printBin(or);
		printf("%3d  ^ %3d = %3d = 0b", a_int, b_int, xor); printBin(xor);
		printf("     ~ %3d = %3d = 0b", a_int, not); printBin((unsigned char)not);
		printf("%3d >> %3d = %3d = 0b", a_int, b_int, rightShift); printBin(rightShift);
		printf("%3d << %3d = %3d = 0b", a_int, b_int, leftShift); printBin(leftShift);

		printf("\n");
	}

	return 0;
}
